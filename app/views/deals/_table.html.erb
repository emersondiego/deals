<% if @deals.empty? %>
  <div class="alert alert-danger" role="alert">Don't have deals yet</div>
<% else %>
  <div class="container">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Customer</th>
          <th>Description</th>
          <th>Status</th>
          <th>Closing Date/Probability</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% @deals.each do |deal| %>
        <tbody>
          <tr>
            <td><%= deal.customer %></td>
            <td><%= deal.description %></td>
            <td><%= deal.status.camelcase %></td>
            <td><%= deal.closing_date_probability %></td>
            <td><%= deal.value %></td>
            <td>
              <%= link_to 'Edit', edit_deal_path(deal) %> |
              <%= link_to 'Destroy', deal_path(deal), method: :delete %> |
              <%= link_to 'Won', deal_won_path(deal), method: :post %> |
              <%= link_to 'Lost', deal_lost_path(deal), method: :post %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
<% end %>
